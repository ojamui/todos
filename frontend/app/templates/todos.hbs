<h2>TODOS route</h2>
{{outlet}}
<div class="todo-list">
    <div class="list-component">
        <div class="list-component-title">
            <div>
                {{#if isAddingNew}}
                    {{  
                        input 
                        autofocus="true" 
                        action="newTodo"
                        placeholder="New Task"
                        value=title
                    }}
                {{else}}
                    משימות
                {{/if}}
            </div>
            <div {{action "toggleNewTodo"}}>
                +
            </div> 
        </div>
        <div class="list-component-items">
            {{#each todos as |todo|}}
                <div class="list-item {{if todo.isDone 'done'}}">
                    <div>
                        {{
                            input 
                            type="checkbox" 
                            checked=todo.isDone
                            change=(action "toggleTodoStatus" todo)
                        }} 
                    </div>
                    {{#if todo.isEditing}}
                        {{  
                            input 
                            autofocus="true" 
                            insert-newline=(action "acceptTodoEdit" todo) 
                            focus-out=(action "acceptTodoEdit" todo)
                            value=todo.title 
                        }}
                    {{else}}
                        <div style="display: flex; flex:1; padding: 0 5px 0 5px;" {{action "toggleTodoEdit" todo}}>{{todo.title}}</div>
                    {{/if}}
                    <button disabled={{todo.isSaving}} {{ action 'deleteTodo' todo}}>
                        DEL
                    </button>
                </div>
            {{/each}}
        </div>
        <div class="list-component-footer">
            <div>לסיום: {{ todosTodo }}</div>
            <div>הושלמו: {{ todosDone }}</div>
            <div>סה"כ: {{ todos.length }}</div>
        </div>
    </div>
</div>